<Window x:Class="TPA_Desktop.View.CreativeDeptView.UpdatePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPA_Desktop.View.CreativeDeptView"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="UpdatePage" Height="275" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Margin="10">
    <Grid>
        <StackPanel>
                <TextBlock Text="Ride and Atrraction Update Page" FontSize="16" Foreground="White" Background="Navy" Padding="5"></TextBlock>
                
                <Label FontSize="14" Margin="0 10">Name</Label>
                <TextBox Name="txtName" Margin="5"></TextBox>
                <Label FontSize="14">Description</Label>
                <TextBox Name="txtDesc" Margin="5"></TextBox>
                <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="10"/>
            </StackPanel>
    </Grid>
    </Border>
</Window>
