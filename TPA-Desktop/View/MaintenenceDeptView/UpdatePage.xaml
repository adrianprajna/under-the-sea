<Window x:Class="TPA_Desktop.View.MaintenenceDeptView.UpdatePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPA_Desktop.View.MaintenenceDeptView"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="UpdatePage" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Margin="10">
        <Grid>
            <StackPanel>
                <TextBlock Text="Maintenence Update Page" FontSize="16" Foreground="White" Background="Navy" Padding="5"></TextBlock>

                <Label FontSize="14">Information</Label>
                <TextBox Name="txtInformation" Margin="5"></TextBox>
                <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Margin="10"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
